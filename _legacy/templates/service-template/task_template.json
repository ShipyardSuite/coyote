{
  "default":{
    "name":"${serviceName}",
    "log-driver":"gelf",
    "log-opt":["gelf-address=udp://${logstash_ip}:12201", "tag=\"${serviceName}\""],
    "constraint":["engine.labels.nodetype==worker"],
    "publish":["mode=host,target={{port}},published={{port}},protocol=tcp"],
    "host":["consul:172.17.0.1"],
    "env":[
           "SERVICE_NAME=${serviceName}",
           "SERVICE_{{port}}_CHECK_HTTP=/api/health/check",
           "SERVICE_{{port}}_CHECK_INTERVAL=15s",
           "SERVICE_{{port}}_CHECK_TIMEOUT=3s",
           "NODE_ENV=production"
           ],
    "oc-db-init":{"populate-test-data":"true"},
    "oc-consul-injection":{
      "redis/password": "${SECRET_:env_REDIS}"
    }
  }
}
